<div class="page-header">
  <h1>Movies</h1>
</div>

<a href="/movies/new_form"> Add a New Movie </a>



<% @moviess.each do |movie| %>

        <h2><%= movie.title %></h2>
        <p><%= movie.duration %></p>
        <p><%= movie.description %></p>
        <p><%= movie.image_url %></p>

      <a href="/movies/<%= movie.id %>" class="btn btn-default btn-block">
        Show details
      </a>

      <a href="/movies/<%= movie.id %>/edit" class="btn btn-default btn-block">
        Edit
      </a>

      <a href="/delete_movie/<%= movie.id %>" class="btn btn-default btn-block">
        Delete
      </a>


<% end %>